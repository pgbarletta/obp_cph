parm ../../../../top_files/dry_apo.prmtop
trajin /home/pbarletta/labo/20/cph_obp/run/apo/pdt/35ph/apo_2.nc
rms first :3-115@CA
average avg_apo_2.pdb pdb
run

# Step two. RMS-Fit to average structure. Calculate covariance matrix.
reference avg_apo_2.pdb [avg]
rms ref [avg] :3-115@CA RMSD
matrix mwcovar name mtx_apo :3-115@CA
createcrd crd_apo
run

# Step three. Diagonalize matrix.
runanalysis diagmatrix mtx_apo vecs 333 out modes_apo_2
go
