parm ../../../../top_files/dry_ctv.prmtop
trajin /home/pbarletta/labo/20/cph_obp/run/ctv/all_pdt/45ph/ctv_45.nc
rms first :3-115@CA
average avg_ctv_45.pdb pdb
run

# Step two. RMS-Fit to average structure. Calculate covariance matrix.
reference avg_ctv_45.pdb [avg]
rms ref [avg] :3-115@CA RMSD
matrix mwcovar name mtx_ctv :3-115@CA
createcrd crd_ctv
run

# Step three. Diagonalize matrix.
runanalysis diagmatrix mtx_ctv vecs 333 out modes_ctv_45
go
