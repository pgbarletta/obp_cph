parm ../../../../top_files/dry_eol.prmtop
trajin /home/pbarletta/labo/20/cph_obp/run/eol/pdt/60ph/eol_7.nc
rms first :3-115@CA
average avg_eol_7.pdb pdb
run

# Step two. RMS-Fit to average structure. Calculate covariance matrix.
reference avg_eol_7.pdb [avg]
rms ref [avg] :3-115@CA RMSD
matrix mwcovar name mtx_eol :3-115@CA
createcrd crd_eol
run

# Step three. Diagonalize matrix.
runanalysis diagmatrix mtx_eol vecs 333 out modes_eol_7
go
